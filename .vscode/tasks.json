{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Sistema Principal",
            "type": "shell",
            "command": "make",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Compilar Win32 App",
            "type": "shell",
            "command": "./build_windows.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}/win32-app"
            }
        },
        {
            "label": "Ejecutar Tests",
            "type": "shell",
            "command": "make test",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Iniciar Servidor Web",
            "type": "shell",
            "command": "python3 -m http.server 8000",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/web"
            }
        },
        {
            "label": "Limpiar Compilaciones",
            "type": "shell",
            "command": "make clean && cd win32-app && make clean",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Compilar Todo",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Compilar Sistema Principal",
                "Compilar Win32 App"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
